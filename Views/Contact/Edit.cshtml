@model ContactModel
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">

    <h1 class="display-4">Editar Contato</h1>

</div>

<form asp-controller="Contact" asp-action="Edit" method="post">

  <input type="hidden" asp-for="Id">
  <div class="form-group mb-3">
    <label for="name">Nome</label>
    <input type="text" asp-for="Name" class="form-control" placeholder="Nome do contato">
    @Html.ValidationMessageFor(x => x.Name)
  </div>

  <div class="form-group mb-3">
    <label for="email">E-mail</label>
    <input type="text" asp-for="Email" class="form-control" placeholder="E-mail do contato">
    @Html.ValidationMessageFor(x => x.Email)
  </div>

  <div class="form-group mb-3">
    <label for="cellphone">Celular</label>
    <input type="text" asp-for="CellPhone" class="form-control" placeholder="Celular do contato">
    @Html.ValidationMessageFor(x => x.CellPhone)
  </div>
  
  <button type="submit" class="btn btn-primary">Alterar</button>
  <a class="btn btn-secondary" asp-controller="Contact" asp-action="Index" role="button">Voltar</a>

</form>
