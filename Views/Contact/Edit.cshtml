@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">

    <h1 class="display-4">Editar Contato</h1>

</div>

<form>
  <div class="form-group mb-3">
    <label for="name">Nome</label>
    <input type="text" class="form-control" placeholder="Nome do contato">
  </div>

  <div class="form-group mb-3">
    <label for="email">E-mail</label>
    <input type="text" class="form-control" placeholder="E-mail do contato">
  </div>

  <div class="form-group mb-3">
    <label for="cellphone">Celular</label>
    <input type="text" class="form-control" placeholder="Celular do contato">
  </div>
  
  <button type="submit" class="btn btn-primary">Alterar</button>
  <a class="btn btn-secondary" asp-controller="Contact" asp-action="Index" role="button">Voltar</a>
</form>
